<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sortedcode.apps.Facts">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemesettings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FactSettings"
            android:label="@string/title_activity_fact_settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppThemeset" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sortedcode.apps.Facts.MainActivity" />
        </activity>
        <activity
            android:name=".intro4"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_intro4"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sortedcode.apps.Facts.MainActivity" />
        </activity>
    </application>

</manifest>
